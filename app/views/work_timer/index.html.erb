<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">
    google.charts.load("current", {packages:['corechart']});
    google.charts.setOnLoadCallback(drawCharts);
    
    function drawCharts() {
        weekCount = 0;
        <% @entries.each do |week| %>
            chartDiv = "columnchart_values" + weekCount;
            dayVals = [];
            <% if week != nil %>
                <% week.each do |day| %>
                    <% if day != nil %>
                        dayVals.push(parseFloat(<%=day%>)/60/60);
                    <% else %>
                        dayVals.push(0);
                    <% end %>
                <% end %>
                drawChart(weekCount, dayVals, chartDiv);
            <% end %>
            weekCount++;
        <% end %>
    }
    
    function drawChart(week, entry, chartDiv) {
        
      var data = google.visualization.arrayToDataTable([
        ["Day", "Time", { role: "style" } ],
        // ["Sunday", entry[0], "red"],
        // ["Monday", entry[1], "orangered"],
        // ["Tuesday", entry[2], "orange"],
        // ["Wednesday", entry[3], "darkorange"],
        // ["Thursday", entry[4], "goldenrod"],
        // ["Friday", entry[5], "gold"],
        // ["Saturday", entry[6], "yellow"]
        ["Sunday", entry[0], getColor(entry[0])],
        ["Monday", entry[1], getColor(entry[1])],
        ["Tuesday", entry[2], getColor(entry[2])],
        ["Wednesday", entry[3], getColor(entry[3])],
        ["Thursday", entry[4], getColor(entry[4])],
        ["Friday", entry[5], getColor(entry[5])],
        ["Saturday", entry[6], getColor(entry[6])]
      ]);
    
      var view = new google.visualization.DataView(data);
      view.setColumns([0, 1,
                       { calc: "stringify",
                         sourceColumn: 1,
                         type: "string",
                         role: "annotation" },
                       2]);
                       
      var totalHours = 0;
      for (i = 0; i <= 6; i++) {
          totalHours += entry[i];
      }
    
      var options = {
        title: "Week of " + getDateOfWeek(week, 2017).toDateString().substring(4) + ", Total: " + totalHours.toFixed(2) + " hours",
        width: 1000,
        height: 400,
        bar: {groupWidth: "95%"},
        legend: 'left',
        vAxis: {
            viewWindow: {
                min: 0,
                max: 12
            },
            ticks: [0, 4, 8, 12] // display labels every 25
        }
      };
      var chart = new google.visualization.ColumnChart(document.getElementById(chartDiv));
      chart.draw(view, options);
    }
    
    function getDateOfWeek(w, y) {
        var d = (1 + (w - 1) * 7); // 1st of January + 7 days for each week
    
        return new Date(y, 0, d);
    }    
    
    function getColor(hours) {
        ratio = hours / 8;
        if (ratio > 1) {
            ratio = 1;
        }
        var color2 = 'ffdd00';
        var color1 = '3ffc00';
        var hex = function(x) {
            x = x.toString(16);
            return (x.length == 1) ? '0' + x : x;
        };
        
        var r = Math.ceil(parseInt(color1.substring(0,2), 16) * ratio + parseInt(color2.substring(0,2), 16) * (1-ratio));
        var g = Math.ceil(parseInt(color1.substring(2,4), 16) * ratio + parseInt(color2.substring(2,4), 16) * (1-ratio));
        var b = Math.ceil(parseInt(color1.substring(4,6), 16) * ratio + parseInt(color2.substring(4,6), 16) * (1-ratio));
        
        newColor = hex(r) + hex(g) + hex(b);
        return "#" + newColor;
    }
</script>